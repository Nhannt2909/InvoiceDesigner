<MudDialog>
    <DialogContent>
        <MudText>@localizer["DoYouReallyWantToDelete"]</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick=Cancel>Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick=@(() => Submit(1))>@localizer["Delete"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick=@(() => Submit(0))>@localizer["MarkAsDeleted"]</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    private void Submit(int type) => MudDialog?.Close(DialogResult.Ok(type));

    private void Cancel() => MudDialog?.Cancel();
}
